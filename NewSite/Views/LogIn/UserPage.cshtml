@using Repository.Entity
@model User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" href="./icon.png" />
    <!----======== CSS ======== -->
    <link rel="stylesheet" href="./css/AccountStyle.css">

    <!----===== Boxicons CSS ===== -->
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

    <title>SomeSite</title>
</head>
<body>
    <nav class="sidebar close">
        <header>
            <div class="image-text">
                <span class="image">
                    <img src="./Files/@Model.Details.Photo" alt="">
                </span>

                <div class="text logo-text">
                    <span class="name">@Model.Details.Name @Model.Details.Surname </span>

                </div>
            </div>

            <i class='bx bx-chevron-right toggle'></i>
        </header>

        <div class="menu-bar">
            <div class="menu">

                <li class="search-box">
                    <i class='bx bx-search icon'></i>
                    <form class="search">
                        <input type="text"  placeholder="Search..." name="UserName">
                    </form>
                </li>

                <ul class="menu-links">
                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-home-alt icon'></i>
                            <span class="text nav-text">Dashboard</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="/Notification">
                            <i class='bx bx-bell icon'></i>
                            <span class="text nav-text">Notifications</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="/Friends">
                            <i class='bx bxs-user-pin icon'></i>
                            <span class="text nav-text">Friends</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="/account/User/Settings">
                            <i class='bx bx-edit-alt icon'></i>
                            <span class="text nav-text">Edit Name</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="/ChangePasswordView">
                            <i class='bx bx-edit-alt icon'></i>
                            <span class="text nav-text">Change Password</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="/account/User/Restore/Password/Model.UserId/empty">
                            <i class='bx bx-edit-alt icon'></i>
                            <span class="text nav-text">Restore Password</span>
                        </a>
                    </li>
                    @if (@Model.RoleId == 1)
                    {
                        <li class="nav-link">
                            <a href="/account/User/Delete/Model.UserId">
                                <i class='bx bxs-checkbox-minus icon'></i>
                                <span class="text nav-text">Delete Account</span>
                            </a>
                        </li>
                    }

                </ul>
            </div>

            <div class="bottom-content" >
                <li class="LogOut">
                    <a class="LogOut" href="/LogOut">
                        <i class='bx bx-log-out icon'></i>
                        <span class="text nav-text LogOut ">Logout</span>
                    </a>
                </li>

                <li class="mode">
                    <div class="sun-moon">
                        <i class='bx bx-moon icon moon'></i>
                        <i class='bx bx-sun icon sun'></i>
                    </div>
                    <span class="mode-text text">Dark mode</span>

                    <div class="toggle-switch">
                        <span class="switch"></span>
                    </div>
                </li>

            </div>
        </div>
    </nav>
    <section id="friends" class="friends close"></section>
    <div class="container">
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-2">User</div>
            <div class="col-4"><input type="text" id="userInput" /></div>
        </div>
        <div class="row">
            <div class="col-2">Message</div>
            <div class="col-4"><input type="text" id="messageInput" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <input type="button" id="sendButton" value="Send Message" />
            </div>
        </div>
    </div>
<hr />

    <div class="mainDiv">
    <div class="row">
        <div class="col-12">
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
    </div>
    <script src="./js/site.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>

</body>
</html>